{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "explainFiles": true,
        "esModuleInterop": true,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/cucumber-framework",
            "expect-webdriverio"
        ],
    },
    "include": [
        "../features/step-definitions/*.ts",
        "../features/pageobjects/*.ts",
        "../features/**/*.ts",
        "..//**/*.ts",
    ]
}